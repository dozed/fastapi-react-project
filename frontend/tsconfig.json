{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",

    /* type-checking options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,

    /* module resolution options */
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
